{
  "name": "tamilnadu-learn-spark",
  "version": "1.0.0",
  "description": "Tamil Nadu Learning Hub - Full Stack Application",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "seed": "node seed-db.js",
    "seed:backend": "cd backend && npm run seed",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "education",
    "learning",
    "tamil-nadu",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Tamil Nadu Learning Hub",
  "license": "MIT",
  "dependencies": {
    "@huggingface/transformers": "^3.7.5",
    "dotenv": "^17.2.2",
    "openai": "^6.3.0"
  }
}
